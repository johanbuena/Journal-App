<%= form_with(model: journal, local: true) do |form| %>
  <% if journal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(journal.errors.count, "error") %> prohibited this journal from being saved:</h2>
      <ul>
        <% journal.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :Journal_name, class: "block mb-1 font-bold text-gray-500" %>
    <%= form.text_field :journal_name, class: "w-full border-2 border-gray-200 p-3 rounded outline-none focus:border-purple-500" %>
  </div>
  <div class="field">
    <%= form.label :Journal_description, class: "block mb-1 font-bold text-gray-500" %>
    <%= form.text_area :journal_description, class: "w-full border-2 border-gray-200 p-3 rounded outline-none focus:border-purple-500" %>
  </div>
  <div class="field">
    <%= form.text_field :user_id, value: current_user.id, id: :journal_user_id, type: :hidden %>
  </div>
  <div class="actions">
    <%= form.submit "Create Journal", class: "block w-full bg-yellow-400 hover:bg-yellow-300 p-4 rounded text-yellow-900 hover:text-yellow-800 transition duration-300" %>
  </div>
<% end %>
