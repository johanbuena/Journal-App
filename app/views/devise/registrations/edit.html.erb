<section class="container lg:w-2/5 mb-20 mx-auto">
  <div class="container border-b p-1 m-1">
    <strong class="text-3xl">Edit Account</strong>
  </div>
  <div class="container mx-auto bg-white p-10 rounded shadow-2xl">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :first_name, class: "block mb-1 font-bold text-gray-500" %>
        <%= f.text_field :firstname, autocomplete: "firstname", class: "w-full border-2 border-gray-200 p-3 rounded outline-none focus:border-purple-500" %>
      </div>
      <div class="field">
        <%= f.label :last_name, class: "block mb-1 font-bold text-gray-500" %>
        <%= f.text_field :lastname, autocomplete: "lastname", class: "w-full border-2 border-gray-200 p-3 rounded outline-none focus:border-purple-500" %>
      </div>

      <div class="field">
        <%= f.label :email, class: "block mb-1 font-bold text-gray-500" %>
        <%= f.email_field :email, autocomplete: "email", class: "w-full border-2 border-gray-200 p-3 rounded outline-none focus:border-purple-500" %>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="field">
        <%= f.label :password, class: "block mb-1 font-bold text-gray-500" %> <i>(leave blank if you don't want to change it)</i>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full border-2 border-gray-200 p-3 rounded outline-none focus:border-purple-500" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation, class: "block mb-1 font-bold text-gray-500" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border-2 border-gray-200 p-3 rounded outline-none focus:border-purple-500" %>
      </div>
      <div class="field"><br>
        <%= f.label :current_password, class: "block mb-1 font-bold text-gray-500" %><i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full border-2 border-gray-200 p-3 rounded outline-none focus:border-purple-500" %>
      </div>
      <div class="actions"><br>
        <%= f.submit "Update", class: "block w-full bg-yellow-400 hover:bg-yellow-300 p-4 rounded text-yellow-900 hover:text-yellow-800 transition duration-300" %>
      </div>
    <% end %><br>
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "block w-full bg-red-400 hover:bg-red-300 p-4 rounded text-red-900 hover:text-red-800 transition duration-300" %>
  </div>
</section>
